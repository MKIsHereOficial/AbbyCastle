<body>
    <div class="container" data-ref="Atributos">
        <form class="status" name="status" method="POST">
            <h1>Atributos</h1>
            <% if (char.attrsTotal) { %>
              <h3>Total: <%= char.attrsTotal %></h3>
            <% } %>
            <% if (char.attrs) { %>
                <% char.attrs.map(data => { %>
                    <%- include('components/status', {data, charId: char.id, charName: char.name}); %>
                <% }) %>
            <% } %>
            <button type="submit" id="saveButton">Salvar</button>
        </form>
    </div>
    
    <% if (char.expertise) { %><div class="container" data-ref="Perícias">
        <form class="expertise" name="expertise" method="POST">
            <h1>Perícias</h1>
            <% if (false) { %>
              <h3>Total: <%= char.attrsTotal %></h3>
            <% } %>
            <div id="expertiseCreate">
              <label for="expertise_name">Criar</label>
              <input type="text" name="expertise_name"/>
            </div>
            <% if (char.expertise) { %>
                <% char.expertise.map(data => { %>
                    <%- include('components/expertise', {data, charId: char.id, charName: char.name}); %>
                <% }) %>
            <% } %>
            <button type="submit" id="saveButton">Salvar</button>
        </form>
    </div><% } %>
          

    <div class="header-container">
        <%- include("components/avatar", {char}) %>
    </div>

    
    <div class="f_views">
      <form class="f_viewsForm" name="f_viewsForm" method="POST">
        <%- include('components/progressWithTitle', {max_editable: true, cls: 'progress_hp', name: 'HP', max: char.hp.max, value: char.hp.value, color: "rgb(119, 255, 115)"}) %>
        <%- include('components/progressWithTitle', {max_editable: false, cls: 'progress_san', name: 'Sanidade', max: char.sanity.max, value: char.sanity.value, color: "rgb(115, 141, 255)"}) %>
        <button type="submit" id="saveButton">Salvar</button>
      </form>
    </div>

    <% if (false) { %>
    <div class="footer-container">
      <ul>
        <%- include("components/tab", {title: 'Atributos', iconURL: false, iconName: false, url: `https://abbycastle.mkishereoficial.repl.co/${char.id}/dashboard#attrs`}) %>
      </ul>
    </div>
    <% } %>


</body>
